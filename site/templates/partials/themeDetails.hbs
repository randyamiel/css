<div class="iux-row iux-row--gutter theme-spec--group" style="background-color: {{spec.bodyBg.value}};">
  <div class="iux-row--col-lg-4">
    <h2 style="color: {{spec.bodyColor.value}};">Background Colors</h2>
    {{> themeDetailsSpec title="Body Background" data=spec.bodyBg altBg=spec.bodyBgSecondary }}
    {{> themeDetailsSpec title="Body Background (Secondary)" data=spec.bodyBgSecondary }}

    <h2 style="color: {{spec.bodyColor.value}};">Status Colors</h2>
    {{> themeDetailsSpec title="Status Green" data=spec.statusGreen }}
    {{> themeDetailsSpec title="Status Orange" data=spec.statusOrange }}
    {{> themeDetailsSpec title="Status Yellow" data=spec.statusYellow }}
    {{> themeDetailsSpec title="Status Red" data=spec.statusRed }}
  </div>
  <div class="iux-row--col-lg-4">
    <h2 style="color: {{spec.bodyColor.value}};">Buttons</h2>
    {{> themeDetailsSpec title="Default Button Background" data=spec.btnDefaultBg }}
    {{> themeDetailsSpec title="Default Button Text" data=spec.btnDefaultColor }}
    {{> themeDetailsSpec title="Default Button Hover Color" data=spec.btnDefaultHover }}
    {{> themeDetailsSpec title="Primary Button Background" data=spec.btnPrimaryBg }}
    {{> themeDetailsSpec title="Primary Button Text" data=spec.btnPrimaryColor }}
    {{> themeDetailsSpec title="Primary Button Hover Color" data=spec.btnPrimaryHover }}
  </div>
  <div class="iux-row--col-lg-4">
    <h2 style="color: {{spec.bodyColor.value}};">Forms</h2>
    {{> themeDetailsSpec title="Input Field" data=spec.inputBg border=spec.inputBorderColor }}
    {{> themeDetailsSpec title="Input Field (Hover)" data=spec.inputBgHover border=spec.inputBorderColorHover }}
    {{> themeDetailsSpec title="Input Field (Focus)" data=spec.inputBgFocus border=spec.inputBorderColorFocus }}
    {{> themeDetailsSpec title="Input Field (Disabled)" data=spec.inputBgDisabled border=spec.inputBorderColorDisabled }}
  </div>
</div>
