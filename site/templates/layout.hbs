<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <meta name="author" content="Hook & Loop">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{meta.title}} - Infor UX Developer</title>

    <link rel="stylesheet" type="text/css" href="/dist/iux.min.css">
    <link rel="stylesheet" type="text/css" href="/dist/documentation.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/site.css">
  </head>

  <body class="iux-container">

    <div class="visuallyhidden">
      {{{inlineIcons}}}
    </div>

    <header class="site-header">
      <a class="logo" routerlink="/" href="/">
        <img alt="" src="http://docs-site-staging.us-east-1.elasticbeanstalk.com/assets/logo.svg">
        <span>Infor UX - <em>Developer Site: v{{pkgJson.version}}</em></span>
      </a>
    </header>

    <main class="iux-row">
      <aside class="sidebar iux-row--col-sm-3 iux-row--col-md-3">
        <nav class="sidebar-nav">
          <ul class="iux-list--plain">
            {{#each sitemap.sections}}
              <li class="sidebar-nav__group">
                <a href="/{{slug}}.html" class="sidebar-nav__child-item">{{this.name}}</a>
                <ul class="iux-list--plain">
                  {{#each this.pages}}
                    <li><a href="/{{slug}}.html" class="sidebar-nav__grandchild-item">{{this.name}}</a></li>
                  {{/each}}
                </ul>
              </li>
            {{/each}}
          </ul>
        </nav>
      </aside>

      <div class="iux-row--col-sm-9 iux-row--col-md-9">
        {{#if meta.title}}
          <div class="hero">
            <h1>{{meta.title}}</h1>
            {{#if meta.demo }}
              <a href="{{meta.demo.path}}" title="Demo for {{meta.title}}">View Live Demo</a>
            {{/if}}
            {{#if meta.description}}
              <p class="page-description">{{meta.description}}</p>
            {{/if}}
          </div>
        {{/if}}

        {{#if meta.specs}}
          <ul class="iux-list--plain">
            {{#each meta.specs}}
              {{#if valueType}}
                <li class="site-spec">{{> specValue annotations=../annotations title=title spec=spec}}</li>
              {{else if themeType}}
                <li class="site-spec">{{> themeDetails annotations=../annotations spec=name showColors=showColors}}</li>
              {{else}}
                <li class="site-spec">{{> specColor annotations=../annotations title=title spec=spec}}</li>
              {{/if}}
            {{/each}}
          </ul>
        {{/if}}
        {{{ contents }}}
      </div>

    </main>
  </body>
</html>
